// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model - matches existing MongoDB users collection
model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  username      String   @unique
  email         String?
  password      String
  googleId      String?
  isAdmin       Boolean  @default(false)
  favorites     String[] @db.ObjectId // Player IDs
  favoriteTeams String[] @db.ObjectId // Team IDs
  profile       Profile?
  createdAt     DateTime?
  updatedAt     DateTime?
  dreamTeams    DreamTeam[]
  coachesCreated Coach[]
  teamOwner     TeamOwner?
  teamOwnerApplication TeamOwnerApplication?
  v             Int?     @map("__v")

  @@map("users")
}

type Profile {
  bio          String?
  location     String?
  avatar       String?
  displayName  String?
  favoriteTeam String?
}

// Player model - matches existing MongoDB players collection
model Player {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  team      String
  position  String
  number    Int?
  height    String?
  weight    String?
  age       Int?
  stats     PlayerStats?
  image     String?
  verified  Boolean?     @default(true)
  price     Float?       // Price in dollars for team owners to buy
  isAvailable Boolean?   @default(true) // Whether player is available for purchase
  currentOwner String?  @db.ObjectId // Team Owner ID who owns the player
  purchasedAt DateTime? // When the player was purchased
  unavailableUntil DateTime? // When the player becomes available again
  v         Int?         @map("__v")

  @@map("players")
}

type PlayerStats {
  points    Float?
  rebounds  Float?
  assists   Float?
  steals    Float?
  blocks    Float?
  gamesPlayed Int?
}

// Team model - matches existing MongoDB teams collection
model Team {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String   @unique
  city            String?
  conference      String?
  division        String?
  logo            String?
  roster          String[] @db.ObjectId // Player IDs
  championships   Int?
  establishedYear Int?
  createdAt       DateTime?
  updatedAt       DateTime?

  @@map("teams")
}

// Match model - matches existing MongoDB matches collection
model Match {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  tournamentId String?     @db.ObjectId
  teams       String[]    @db.ObjectId // Participating team IDs (2 items for a match)
  homeTeam    String?     @db.ObjectId
  awayTeam    String?     @db.ObjectId
  date        DateTime?   // match start date/time
  durationMin Int?        // expected duration in minutes
  venue       String?
  stage       String?     // e.g. group, quarterfinal, semifinal, final
  score       MatchScore?
  winner      String?     @db.ObjectId
  status      String?     @default("scheduled") // scheduled, live, completed
  isLive      Boolean?    @default(false)
  createdAt   DateTime?
  updatedAt   DateTime?

  @@map("matches")
}

type MatchScore {
  home Int?
  away Int?
}

// Merchandise model - matches existing MongoDB merchandises collection
model Merchandise {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  price       Float?
  image       String?
  stock       Int?
  category    String?
  verified    Boolean?
  ownerId     String?  @db.ObjectId
  ownerName   String?
  ownerEmail  String?
  createdAt   DateTime?
  updatedAt   DateTime?

  @@map("merchandises")
}

// DreamTeam model - matches existing MongoDB dreamteams collection
model DreamTeam {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  name      String?
  players   String[] @db.ObjectId // Player IDs
  createdAt DateTime?
  updatedAt DateTime?

  @@map("dreamteams")
}

// TeamOwner model - users who are approved to manage dream teams and buy players
model TeamOwner {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  teamName        String
  initialBudget   Float    // Initial budget allocated
  currentBudget   Float    // Remaining budget after purchases
  approvedBy      String?  @db.ObjectId // Admin who approved
  approvedAt      DateTime?
  coachBookings   CoachBooking[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("teamowners")
}

// Coach marketplace - admins create coaches, team owners book them for training
model Coach {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  title       String?
  price       Float    // Price for a standard 30-day booking
  image       String?
  description String?
  adminId     String?  @db.ObjectId
  admin       User?    @relation(fields: [adminId], references: [id])
  bookings    CoachBooking[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("coaches")
}

model CoachBooking {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  coachId      String   @db.ObjectId
  coach        Coach    @relation(fields: [coachId], references: [id])
  teamOwnerId  String   @db.ObjectId
  teamOwner    TeamOwner @relation(fields: [teamOwnerId], references: [id])
  startDate    DateTime // booking start date
  endDate      DateTime // booking end date (typically startDate + 30 days)
  pricePaid    Float
  status       String   @default("pending") // pending, booked, active, completed, cancelled, rejected
  paymentMethod String?
  paymentPhone  String?
  transactionId String?
  buyerPhone    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("coachbookings")
}

// TeamOwnerApplication model - requests to become a team owner
model TeamOwnerApplication {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  teamName        String
  requestedBudget Float    // Budget requested by applicant
  applicationFee  Float    // Fee paid to apply
  paymentInfo     PaymentInfo? // Payment details
  status          String   @default("pending") // pending, approved, rejected
  reviewedBy      String?  @db.ObjectId // Admin who reviewed
  reviewedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("teamownerapplications")
}

type PaymentInfo {
  method        String   // bkash or nagad
  phoneNumber   String   // Payment phone number
  transactionId String   // Transaction ID
  timestamp     String?  // Transaction timestamp
}

// PlayerTransaction model - tracks player purchase history
model PlayerTransaction {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  playerId        String   @db.ObjectId
  teamOwnerId     String   @db.ObjectId
  purchasePrice   Float
  purchasedAt     DateTime @default(now())
  expiresAt       DateTime // When player becomes available again

  @@map("playertransactions")
}

// MerchandiseOrder model - tracks merchandise purchases
model MerchandiseOrder {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  buyerId         String   @db.ObjectId // User who purchased
  buyerName       String
  buyerEmail      String?
  buyerPhone      String?
  items           OrderItem[]
  totalAmount     Float
  paymentInfo     PaymentInfo
  status          String   @default("pending") // pending, approved, rejected
  ownerId         String?  @db.ObjectId // Team owner who listed the products
  ownerName       String?
  reviewedBy      String?  @db.ObjectId // Admin who reviewed
  reviewedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("merchandiseorders")
}

type OrderItem {
  merchandiseId   String   @db.ObjectId
  name            String
  price           Float
  quantity        Int
  image           String?
}

// Blog model - for admin blog posts
model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  details     String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("blogs")
}

// Tournament model - manages competitions between existing `Team` documents
model Tournament {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  status      String?  @default("scheduled") // scheduled, ongoing, completed
  teams       String[] @db.ObjectId // Participating Team IDs
  createdBy   String?  @db.ObjectId // Admin User ID who created the tournament
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tournaments")
}
